generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String?
  subject   Subject[]
  attendance Attendance[]
}

enum Type {
  lost
  found
}

model LostFound{
  id            Int     @id @default(autoincrement())
  title         String
  description   String
  type          Type
  email         String
  time          DateTime @default(now())
}


model Subject {
  id         Int     @id @default(autoincrement())
  name       String
  userId     Int
  user       User    @relation(fields: [userId], references: [id])
  attendance Attendance[]
  @@unique([name, userId])
}

enum Status {
  present
  absent
}

model Attendance {
  id        Int      @id @default(autoincrement())
  date      DateTime 
  status    Status   
  subjectId Int
  userId    Int
  subject   Subject  @relation(fields: [subjectId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([date, subjectId, userId])
}